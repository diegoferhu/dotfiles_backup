{
  "editor.fontSize": 16,
  "editor.formatOnPaste": false, // Avoid default format by vscode
  "editor.suggestSelection": "first",
  "editor.rulers": [140],
  "editor.tabSize": 2,
  "editor.wordWrap": "on", // Show or not show scroll over long lines
  //"explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.excludeGitIgnore": false, // Show git ignore files on left navbar
  "files.autoSave": "onFocusChange", // Auto save when change focus
  "files.eol": "\n", // Add space in end of all files
  "search.useGlobalIgnoreFiles": true, // Search in ignore files global by user config
  "search.useIgnoreFiles": true, // Search in ignore files by poroyect (workspace) config
  // Extensions
  "focus.opacity": "0.7",
  "focus.highlightRange": "block",
  //TERMINAL
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 16,
  //hide
  "editor.minimap.enabled": false,
  "workbench.editor.showTabs": "single",
  // Apparence
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "explorer.compactFolders": false,
  "editor.renderWhitespace": "all",
  "workbench.list.horizontalScrolling": true,
  "workbench.sideBar.location": "left",
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": true,
  "editor.bracketPairColorization.enabled": true,
  "symbols.hidesExplorerArrows": false,
  "breadcrumbs.symbolPath": "off",
  "editor.dragAndDrop": false,
  //AWS
  "aws.telemetry": false,
  "aws.lambda.recentlyUploaded": {
    "profile:default": {
      "us-east-2": "poc-profiling-validate"
    }
  },
  //ESLINT INTEGRATION AND PRETTIER
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript, javascript]": {
    "editor.codeActionsOnSave": [
      "source.addMissingImports",
      "source.fixAll.eslint"
    ]
  },
  "bitoAI.codeCompletion.setAutoCompletionTriggerLogic": 250,
  "bitoAI.codeCompletion.enableAutoCompletion": true,
  "bitoAI.codeCompletion.enableCommentToCode": true,
  "workbench.colorCustomizations": {},
  "editor.inlineSuggest.showToolbar": "onHover"
  // "git.openRepositoryInParentFolders": "always"
  //AUTOMATIC
}
